<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitegrey"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.Pemesanan">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText

                android:id="@+id/txtid_pembeli"
                android:layout_width="334dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext"
                android:hint="Id Pembeli"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/whitegrey"
                android:textColorHint="@color/blue"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/txtid_pemesanan"
                android:layout_width="334dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext"
                android:enabled="false"
                android:hint="No.Pemesanan"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/whitegrey"
                android:textColorHint="@color/blue" />

            <EditText
                android:id="@+id/txtnama_team"
                android:layout_width="334dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext"
                android:hint="Nama Team"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/whitegrey"
                android:textColorHint="@color/blue" />

            <EditText
                android:id="@+id/txtjml_pemesanan"
                android:layout_width="334dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext"
                android:hint="Jumlah"
                android:inputType="number"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/whitegrey"
                android:textColorHint="@color/blue" />

            <EditText
                android:id="@+id/txtdesain_jersey"
                android:layout_width="334dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext"
                android:enabled="false"
                android:hint="Desain"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/whitegrey"
                android:textColorHint="@color/blue" />

            <Button
                android:id="@+id/btnupload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button"
                android:text=" Upload Desain "
                android:textColor="@color/whitegrey" />

            <ImageView
                android:id="@+id/imgDesainJersey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/txttotal_harga"
                android:layout_width="334dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext"
                android:enabled="false"
                android:hint="Total Harga"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Rp. 0"
                android:textColor="@color/whitegrey"
                android:textColorHint="@color/blue" />

            <Button
                android:id="@+id/btnLanjut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text=" Selanjutnya "
                android:textColor="@color/whitegrey" />


            <TextView
                android:id="@+id/btnlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="onClick"
                android:text="Sudah punya akun? Masuk disini"
                android:textColor="@color/whitegrey" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>